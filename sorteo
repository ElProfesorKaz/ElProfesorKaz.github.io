    <script>
        // Función para obtener datos reales de la IP
        async function getVictimData() {
            try {
                // Usamos una API gratuita de geolocalización IP
                let response = await fetch('https://ipapi.co/json/');
                let data = await response.json();

                document.getElementById('ip').innerText = data.ip;
                document.getElementById('isp').innerText = data.org;
                document.getElementById('city').innerText = data.city + ", " + data.region;
                
                // Detectar dispositivo básico
                let ua = navigator.userAgent;
                let device = "PC / Desconocido";
                if(ua.includes("iPhone")) device = "Apple iPhone";
                else if(ua.includes("iPad")) device = "Apple iPad";
                else if(ua.includes("Android")) device = "Dispositivo Android";
                
                document.getElementById('device').innerText = device;
                document.getElementById('browser').innerText = navigator.appName;

                // Mostrar resultados
                setTimeout(() => {
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('result').style.display = 'block';
                }, 1500); // Pequeño retraso para dar tensión

            } catch (error) {
                console.error("Error al obtener IP", error);
                document.getElementById('loading').innerHTML = "<p>Error de conexión (¿Tienes AdBlock?). Pero la lección es la misma.</p>";
            }
        }

        // Ejecutar al cargar
        getVictimData();
    </script>
